        <TextBlock Margin="410, 160, 0, 0" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="30">Test Area</TextBlock>
        <Canvas Name="cnv_AreaTest" HorizontalAlignment="Left" Height="475" Margin="410,200,0,0" VerticalAlignment="Top" Width="600" Background="DarkBlue">
        </Canvas>
    </Grid>
</Page>
